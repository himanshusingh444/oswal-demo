pipeline {
    agent any
    parameters {
        choice(
            name: 'ENVIRONMENT',
            choices: ['dev', 'qa', 'staging'],
            description: 'Select the environment to deploy to',
            defaultValue: 'dev'
        )
        choice(
            name: 'APP_TO_DEPLOY',
            choices: ['both', 'go-app', 'dotnet-app'],
            description: 'Select the application(s) to deploy',
            defaultValue: 'both'
        )
    }
    environment {
        HELM_CHARTS_DIR = '../helm'
    }
    stages {
        stage('Prepare Environment') {
            steps {
                sh "kubectl config set-context --current --namespace=${params.ENVIRONMENT}"
                sh "kubectl create namespace ${params.ENVIRONMENT} --dry-run=client -o yaml | kubectl apply -f - || true"
            }
        }
        stage('Deploy Go App') {
            when {
                expression { params.APP_TO_DEPLOY == 'both' || params.APP_TO_DEPLOY == 'go-app' }
            }
            steps {
                script {
                    try {
                        sh """
                        helm upgrade --install go-app ${HELM_CHARTS_DIR}/go-app \
                        --values ${HELM_CHARTS_DIR}/go-app/values-${params.ENVIRONMENT}.yaml \
                        --namespace ${params.ENVIRONMENT} --create-namespace
                        """
                        echo "Go app deployed to ${params.ENVIRONMENT}"
                    } catch (Exception e) {
                        echo "Deployment failed for Go app: ${e.message}"
                        sh "helm rollback go-app ${params.ENVIRONMENT} --namespace ${params.ENVIRONMENT}"
                        error "Rollback triggered for Go app"
                    }
                }
            }
        }
        stage('Deploy .NET App') {
            when {
                expression { params.APP_TO_DEPLOY == 'both' || params.APP_TO_DEPLOY == 'dotnet-app' }
            }
            steps {
                script {
                    try {
                        sh """
                        helm upgrade --install dotnet-app ${HELM_CHARTS_DIR}/dotnet-app \
                        --values ${HELM_CHARTS_DIR}/dotnet-app/values-${params.ENVIRONMENT}.yaml \
                        --namespace ${params.ENVIRONMENT} --create-namespace
                        """
                        echo ".NET app deployed to ${params.ENVIRONMENT}"
                    } catch (Exception e) {
                        echo "Deployment failed for .NET app: ${e.message}"
                        sh "helm rollback dotnet-app ${params.ENVIRONMENT} --namespace ${params.ENVIRONMENT}"
                        error "Rollback triggered for .NET app"
                    }
                }
            }
        }
        stage('Verify Deployment') {
            when {
                anyOf {
                    expression { params.APP_TO_DEPLOY == 'both' }
                    expression { params.APP_TO_DEPLOY == 'go-app' }
                    expression { params.APP_TO_DEPLOY == 'dotnet-app' }
                }
            }
            steps {
                script {
                    if (params.APP_TO_DEPLOY == 'both' || params.APP_TO_DEPLOY == 'go-app') {
                        sh "helm rollout status deployment/go-app -n ${params.ENVIRONMENT} --timeout 120s"
                    }
                    if (params.APP_TO_DEPLOY == 'both' || params.APP_TO_DEPLOY == 'dotnet-app') {
                        sh "helm rollout status deployment/dotnet-app -n ${params.ENVIRONMENT} --timeout 120s"
                    }
                }
            }
        }
    }
    post {
        failure {
            echo "Deployment to ${params.ENVIRONMENT} failed for ${params.APP_TO_DEPLOY}. Check logs for details."
        }
        success {
            echo "Deployment to ${params.ENVIRONMENT} completed successfully for ${params.APP_TO_DEPLOY}."
        }
    }
}